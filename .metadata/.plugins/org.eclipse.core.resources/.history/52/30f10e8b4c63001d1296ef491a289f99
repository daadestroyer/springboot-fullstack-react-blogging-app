package com.daadestroyer.springbootfullstackreactbloggingapp.dto;

import java.util.Date;
import javax.persistence.Column;
import org.springframework.data.annotation.CreatedDate;

import com.daadestroyer.springbootfullstackreactbloggingapp.model.Category;
import com.daadestroyer.springbootfullstackreactbloggingapp.model.User;

import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Getter
@Setter
@NoArgsConstructor
@AllArgsConstructor
public class PostDto {

	private int postId;

	@Column(name = "postTitle", nullable = false, length = 100)
	private String postTitle;

	@Column(name = "postContent", nullable = false, length = 10000)
	private String postContent;
	
	@Column(name = "addedDate" , nullable = false)
	@CreatedDate
	private Date addedDate;	
	
	private Category category;
	
	private User user;
	

}
